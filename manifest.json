{
  "name": "Fieldwork Autofill",
  "version": "1.0",
  "description": "Allows shortcuts for quickly filling out fields in Fieldwork forms",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "*://*/*"],
  "options_page": "options.html",
  "content_scripts": [
     {
       "matches": ["https://opinari.fieldwork.com/surveys/*", "https://www.userinterviews.com/surveys/*", "https://www.userinterviews.com/projects/*"],
       "js": ["content-script.js"],
       "all_frames": true
     }
   ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16px.png",
      "32": "images/icon_32px.png",
      "48": "images/icon_48px.png",
      "128": "images/icon_128px.png"
    }
  },
  "commands": {
    "autofill" : {
        "suggested_key": {
            "default": "Alt+Shift+F" 
        },
        "description": "Autofill fields"
    }
  },
  "icons": {
    "16": "images/icon_16px.png",
    "32": "images/icon_32px.png",
    "48": "images/icon_48px.png",
    "128": "images/icon_128px.png"
  },
  "manifest_version": 2
}
